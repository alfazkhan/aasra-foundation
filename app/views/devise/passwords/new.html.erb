<% content_for :navbar do %>
  <p></p>
<% end %>

<style>

  .new_user {
    width: 100%;
    max-width: 330px;
    padding: 15px;
    margin: 20% auto;

  }
  .new_user .checkbox {
    font-weight: 400;
  }
  .new_user .form-control {
    position: relative;
    box-sizing: border-box;
    height: auto;
    padding: 10px;
    font-size: 16px;
  }
  .new_user .form-control:focus {
    z-index: 2;
  }
  .new_user input[type="email"] {
    margin-bottom: -1px;
    border-bottom-right-radius: 0;
    border-bottom-left-radius: 0;
  }
  .new_user input[type="password"] {
    margin-bottom: 10px;
    border-top-left-radius: 0;
    border-top-right-radius: 0;
  }
</style>

<div class="container text-center">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>


  <%= link_to image_tag("A2.png", class: 'mb-4',width:'72',height:'72' ), root_path %>
  <h1 class="h3 mb-3 font-weight-normal">Forget Password?</h1>
  <label for="inputEmail" class="sr-only">Email address</label>
  <%= f.email_field :email, autofocus: true, class:'form-control', placeholder:'Enter Your Email' %><br/>


  <%= f.submit "Send Me The Instructions", class:'btn btn-block btn-md btn-primary' %><br/><br/>

  <%= link_to "Log in", new_session_path(resource_name) %><br />
  <%= link_to "Back to Homepage", root_path %>
<% end %>

</div>

<% content_for :footer do %>
  <p></p>
<% end %>
