<div class="conatainer mobile" id="donate">
  <div class="card" style="width:95%;margin:auto">
    <div class="card-body">
      <h2 class="h3-responsive font-weight-bold text-center my-5" style="color:#007bff" >Donation</h2>

      <div class="container" style="margin-bottom: 5%">
        <div class="row">
          <div class="col-lg-12">
            <input type="button" class="toggle-button btn-block button-active" value="Paytm" id="paytm1"/>
